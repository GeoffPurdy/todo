<h1>Listing tasks</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>List</th>
      <th>Title</th>
      <th>Notes</th>
      <th>Due</th>
      <th>Is complete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.list %></td>
        <td><%= task.title %></td>
        <td><%= task.notes %></td>
        <td><%= task.due %></td>
        <td><%= task.is_complete %></td>
        <td><%= link_to 'Show', task, class: "btn btn-link"  %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-link"  %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path, class: "btn btn-link"  %>
